---
import type {CollectionEntry} from "astro:content";

interface Props {
    isActive: boolean;
    testimonial: CollectionEntry<"testimonials">;
}

const {isActive, testimonial} = Astro.props;
const classMap = {
    active: "opacity-90 scale-100 visible delay-200",
    inactive: "opacity-0 scale-75 invisible",
};
---

<q
    aria-hidden={!isActive}
    class:list={[
        "relative w-full flex justify-center items-center col-start-1 col-span-1 row-start-1 row-span-1",
        "transition-all duration-300",
        "font-thin text-center",
        "pointer-events-none lg:pointer-events-auto",
        isActive ? classMap.active : classMap.inactive,
    ]}
    data-classes-active={classMap.active}
    data-classes-inactive={classMap.inactive}
    data-testimonial-id={testimonial.id}
>
    {testimonial.body}
</q>
