---
import type {Resource} from "../data/typedefs";
import Icon from "./icons/icon.astro";

interface Props extends Resource {}

const {link, title, description, iconId} = Astro.props;
---

<li class="flex">
    <a
        {...link}
        class="no-tap-highlight flex flex-row items-center gap-y-4 gap-x-8 common-focus p-6 md:p-8 w-full border border-neutral-800 rounded-lg transition-bg md:hover:bg-neutral-800 md:hover:scale-105"
    >
        <Icon iconId={iconId} class="w-10 h-10 md:w-12 md:h-12 flex-initial" />
        <div class="flex-1">
            <h3 class="font-bold md:text-lg lg:text-xl">{title}</h3>
            <p class="opacity-70 text-sm lg:text-base">{description}</p>
        </div>
    </a>
</li>
