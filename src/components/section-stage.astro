---
import Editor from "./editor.astro";
---

<section class="bg-gradient-to-tr from-primary-400 to-neutral-500">
    <div class="content py-10">
        <h1 class="font-serif" slot="stage">
            <span class="block text-2xl">Sascha Klatt</span>
            <span class="block text-4xl">full-stack dev</span>
        </h1>
        <Editor>
            <li>TypeScript</li>
            <li>React / Next.js / Astro</li>
            <li>Node.js</li>
            <li>MongoDB / MySQL</li>
            <li>Apollo GraphQL</li>
            <li>Sanity CMS</li>
            <li>Figma / Affinity</li>
        </Editor>

        <div class="flex gap-x-4">
            <button class="btn-accent">get in touch!</button>
            <button class="btn-neutral">play space invaders :)</button>
        </div>
    </div>
</section>
