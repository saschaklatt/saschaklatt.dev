---
import Layout from "../layouts/main.astro";
import SectionStage from "../components/section-stage.astro";
import SectionCta from "../components/section-cta.astro";
import SectionHeadlined from "../components/section-headlined.astro";
import {allProjects} from "../data/projects";
import {Email, allResources} from "../data/resources";
import CardResource from "../components/card-resource.astro";
import CardProject from "../components/card-project.astro";
import SectionTestimonials from "../components/section-testimonials";
import {allTestimonials} from "../data/testimonials";
import SectionStageContentIntro from "../components/section-stage-content-intro.astro";
import ClickTracker from "../components/click-tracker.astro";
import SectionImageText from "../components/section-image-text.astro";
import illustrationFrontendDev from "../assets/images/illustration-mobile-tablet-desktop.webp";
import illustrationFrontendDev2x from "../assets/images/illustration-mobile-tablet-desktop@2x.webp";
import illustrationFrontendDev4x from "../assets/images/illustration-mobile-tablet-desktop@4x.webp";
import illustrationHeadlessCms from "../assets/images/illustration-headless-cms.webp";
import illustrationHeadlessCms2x from "../assets/images/illustration-headless-cms@2x.webp";
import illustrationHeadlessCms4x from "../assets/images/illustration-headless-cms@4x.webp";
import illustrationUxUi from "../assets/images/illustration-ui-components-phone.webp";
import illustrationUxUi2x from "../assets/images/illustration-ui-components-phone@2x.webp";
import illustrationUxUi4x from "../assets/images/illustration-ui-components-phone@4x.webp";
---

<Layout
    slug="/"
    title="Sascha Klatt | full-stack developer"
    description="Freelance full-stack developer building web apps and enterprise websites preferably with React, Next.js and Node.js."
>
    <SectionStage slot="stage">
        <SectionStageContentIntro />
    </SectionStage>
    <SectionImageText
        slot="main"
        id="services"
        class="mt-20 my-48 md:mt-48 md:mb-64"
        headline="my services"
        subline="Here's what I can do for you 🧑🏻‍💻"
        items={[
            {
                image: illustrationFrontendDev,
                image2x: illustrationFrontendDev2x,
                image4x: illustrationFrontendDev4x,
                imageAlt: "Illustration of a mobile phone, a tablet, and a desktop computer.",
                title: "Frontend Development",
                text: "I specialize in creating responsive and fast-loading marketing websites, as well as data-heavy web applications and insightful data visualizations. Additionally, I build component libraries with Storybook to ensure consistency and efficiency in development workflows. With experience in integrating complex state management and fetching data seamlessly from various APIs, including REST and GraphQL, I prioritize accessibility, crafting crisp interfaces, and smooth micro animations that enhance user experience. With a keen eye for aesthetics, I ensure your digital presence stands out and performs at its best.",
            },
            {
                image: illustrationHeadlessCms,
                image2x: illustrationHeadlessCms2x,
                image4x: illustrationHeadlessCms4x,
                imageAlt: "Illustration of all content of the headless CMS distributed to different devices.",
                title: "Headless CMS",
                text: "Unlock the full potential of your content with cutting-edge headless CMS solutions. Specializing in Contentful and Sanity, I help you manage content for various platforms, including websites, mobile apps, e-commerce, games, or content hubs for multiple distribution channels. With expertise in content modeling, data migrations, and tailored editing experiences for content editors, I provide solutions that transform your digital presence and meet your unique business needs.",
            },
            {
                image: illustrationUxUi,
                image2x: illustrationUxUi2x,
                image4x: illustrationUxUi4x,
                imageAlt: "Illustration of a phone with UI components.",
                title: "UX/UI",
                text: "Let's craft seamless and engaging digital experiences! Utilizing industry-leading tools like Figma, I specialize in creating comprehensive design systems, building wireframes, mockups, and clickable prototypes, assessing technical feasibility, and developing intuitive interfaces that captivate users. Whether you need to establish a cohesive visual identity or enhance the usability of your product, I can help your digital presence be both functional and visually outstanding.",
            },
        ]}
    />
    <SectionHeadlined
        slot="main"
        class="my-20 md:my-32"
        headline="Projects"
        subline="Hire me as a freelance web developer to realize your project or support your dev team. Here's a selection of the projects I worked on."
        id="projects"
    >
        <ul class="flex flex-col gap-16">
            {
                allProjects.map((project) => (
                    <li id={`project-${project.id}`}>
                        <CardProject project={project} />
                    </li>
                ))
            }
        </ul>
    </SectionHeadlined>
    <SectionCta slot="main" headline="Need dev support?" message="Let me help you creating high-quality digital products.">
        <ClickTracker
            slot="actions"
            trackingEvent={{action: "click", category: "cta_email", name: "cta_email_section-cta-dev-support"}}
        >
            <a class="btn-accent" {...Email.link}>
                {"send me an email"}
            </a>
        </ClickTracker>
    </SectionCta>
    <SectionTestimonials slot="main" testimonials={allTestimonials} headline="Testi­monials" name="testimonial" client:visible />
    <SectionHeadlined
        slot="main"
        class="my-20 md:my-32"
        headline="Let's connect!"
        subline="Download my CV and connect with me on other online platforms."
    >
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {allResources.map((resource) => <CardResource {...resource} />)}
        </ul>
    </SectionHeadlined>
    <SectionCta
        slot="main"
        headline="Thanks for visiting!"
        message="If you have any questions or want to collaborate do not hestiate to..."
    >
        <ClickTracker
            slot="actions"
            trackingEvent={{action: "click", category: "cta_email", name: "cta_email_section-cta-thanks"}}
        >
            <a class="btn-accent" {...Email.link}>{"send me an email"}</a>
        </ClickTracker>
    </SectionCta>
</Layout>
